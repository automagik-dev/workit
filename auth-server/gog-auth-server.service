[Unit]
Description=gog-cli OAuth Callback Server
After=network.target
Documentation=https://github.com/automagik-genie/gog-cli

[Service]
Type=simple
User=genie
Group=genie
WorkingDirectory=/home/genie/workspace/repos/gog-cli/auth-server

# Load credentials from env file
EnvironmentFile=/home/genie/.config/gog/credentials.env

# Server config
Environment=PORT=8089
Environment=REDIRECT_URL=https://gogoauth.namastex.io/callback

ExecStart=/home/genie/workspace/repos/gog-cli/auth-server/auth-server \
    --port=${PORT} \
    --redirect-url=${REDIRECT_URL}

Restart=always
RestartSec=5

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/tmp

[Install]
WantedBy=multi-user.target
