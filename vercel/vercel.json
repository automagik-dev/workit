{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/callback", "destination": "/api/callback" },
    { "source": "/token/:state", "destination": "/api/token/:state" },
    { "source": "/status/:state", "destination": "/api/status/:state" },
    { "source": "/health", "destination": "/api/health" },
    { "source": "/privacy", "destination": "/api/privacy" },
    { "source": "/terms", "destination": "/api/terms" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "no-referrer" }
      ]
    }
  ]
}
